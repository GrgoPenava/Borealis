@model Zapisi

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Kreiraj zapis</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Ime"></label>
			<input asp-for="Ime" class="form-control" />
			@*<span asp-validation-for="Ime" class="text-danger">Nije upisano ime</span>*@
		</div>
		<div class="mb-3">
			<label asp-for="Prezime"></label>
			<input asp-for="Prezime" class="form-control" />
			@*<span asp-validation-for="Prezime" class="text-danger">Nije upisano prezime</span>*@
		</div>
		<div class="mb-3">
			<label asp-for="vrijeme"></label>
			<input asp-for="vrijeme" class="form-control" />
			@*<span asp-validation-for="vrijeme" class="text-danger">Nije upisano vrijeme ili je upisano u krivom formatu (ispravno: 15.10)</span>*@
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Kreiraj</button>
		<a asp-controller="Zapisi" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Odustani
		</a>
	</div>
</form>
